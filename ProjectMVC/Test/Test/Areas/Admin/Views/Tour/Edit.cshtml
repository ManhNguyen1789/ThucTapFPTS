@model Test.Tour
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa thông tin tour</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Chi tiết thông tin Tour</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">Config option 1</a>
                        </li>
                        <li>
                            <a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <asp:Label runat="server" ID="lbloi" CssClass="text-danger"></asp:Label>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" });
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mã Tour <span class="text-danger">*</span></label>
                            <div class="col-sm-10">
                                @Html.HiddenFor(model => model.MaTour, new { @class = "form-control", @placeholder = "Mã Tour", @autofocus = "autofocus" })
                                
                                <span class="help-block m-b-none">Trường này đã được ẩn đi</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên Tour <span class="text-danger">*</span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.TenTour, new { @class = "form-control", @placeholder = "Tên Tour", @autofocus = "autofocus" })
                                <span class="help-block m-b-none">Ví dụ: Bắc Giang</span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mã loại tour <span class="text-danger">*</span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.MaLoaiTour, new { @class = "form-control", @placeholder = "Mã Loại tour", @autofocus = "autofocus" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Giá Tour <span class="text-danger">*</span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.GiaTien, new { @class = "form-control", @placeholder = "Giá tiền", @autofocus = "autofocus" })
                                <span class="help-block m-b-none">Ví dụ: 15,000,000</span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Min User<span class="text-danger">*</span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Minuser, new { @class = "form-control", @placeholder = "Min user", @autofocus = "autofocus" })
                                <span class="help-block m-b-none">Ví dụ: 20</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Max User <span class="text-danger">*</span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Maxuser, new { @class = "form-control", @placeholder = "Max user", @autofocus = "autofocus" })
                                <span class="help-block m-b-none">Ví dụ: 30</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Miêu tả ngắn <span class="text-danger">*</span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.MoTa, new { @class = "form-control", @placeholder = "Mô tả thông tin tour", @autofocus = "autofocus" })
                                <span class="help-block m-b-none">Ví dụ: 30</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" value="Save" class="btn btn-danger">
                                    Lưu
                                </button>
                                <button type="submit" class="btn btn-info">
                                    @Html.ActionLink("Hủy", "Index")
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

