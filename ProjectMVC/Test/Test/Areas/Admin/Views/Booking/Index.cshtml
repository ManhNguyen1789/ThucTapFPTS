@model List<Test.Booking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <style>
        span.item-submit a {
            color: white;
        }
    </style>
<h2>Booking</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Basic Table</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">Config option 1</a>
                        </li>
                        <li>
                            <a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <button type="submit" class="btn btn-info">
                    @Html.ActionLink("Thêm mới booking", "create")
                </button>
                <table class="table">
                    <thead>
                        <tr>

                            <th>Mã vé</th>
                            <th>Mã Tour</th>
                            <th>Số lượng người lớn</th>
                            <th>Số lượng trẻ em</th>
                            <th>Mã lịch trình</th>
                            <th>Mã Khách hàng</th>
                            <th>Mã địa điểm du lịch</th>
                            <th>Mã Nhân viên</th>
                            <th>Trạng thái</th>
                            <th>Giá tiền</th>
                            <th>Ngày book</th>
                            <th>Chắc năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaVe)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaTour)</td>
                                <td>@Html.DisplayFor(modelItem => item.SLNguoiLon)</td>
                                <td>@Html.DisplayFor(modelItem => item.SLTreEm)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaLT)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaKH)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaDDDL)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaNV)</td>
                                <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                                <td>@Html.DisplayFor(modelItem => item.GiaTien)</td>
                                <td>@Html.DisplayFor(modelItem => item.NgayBook)</td>
                                <td>
                                    <button class="btn btn-primary btn-xs">
                                        <i class="fa fa-pencil">
                                            <span class="item-submit">
                                                @Html.ActionLink("Edit", "Edit", new { id = item.MaVe })
                                            </span>
                                        </i>
                                    </button>
                                    <button class="btn btn-success btn-xs">
                                        <i class="fa fa-check">
                                            <span class="item-submit">
                                                @Html.ActionLink("Detail", "Details", new { id = item.MaVe })
                                            </span>
                                        </i>
                                    </button>
                                    <button class="btn btn-danger btn-xs">
                                        <i class="fa fa-trash-o">
                                            <span class="item-submit">
                                                @Html.ActionLink("Delete", "Delete", new { id = item.MaVe })
                                            </span>

                                        </i>
                                    </button>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
   
